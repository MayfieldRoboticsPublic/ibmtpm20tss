BEAM_OPTIONS = 

CCFLAGS = 	\
	-DTPM_POSIX			\
	-Wall  -W -Wmissing-declarations -Wmissing-prototypes -Wnested-externs \
	-ggdb -O0 -c 			\
	-DTPM_BITFIELD_LE		\
	-I.				\
	-DTPM_ENCRYPT_SESSIONS_DEFAULT="\"0\""

beam_targets = 				\
		tss.berr		\
		tssauth.berr		\
		tssccattributes.berr	\
		tsscryptoh.berr		\
		tsscrypto.berr		\
		tssdev.berr		\
		tssfile.berr		\
		tssmarshal.berr		\
		tssprint.berr		\
		tssproperties.berr	\
		tssresponsecode.berr	\
		tsssocket.berr		\
		tsstbsi.berr		\
		tsstransmit.berr	\
		tssutils.berr

all:	$(beam_targets)

$(beam_targets): %.berr : %.c
	beam_compile --beam::prefixcc gcc -c $< \
	$(CCFLAGS) $(BEAM_OPTIONS) > $@

clean:
	rm tpm_*.beam tpm_*.berr