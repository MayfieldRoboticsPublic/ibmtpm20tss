$(DEST)/%.php:	%.php
		cp $< $@
		chmod a+r $@
$(DEST)/%.html:	%.html
		cp $< $@
		chmod a+r $@
$(DEST)/%.css:	%.css
		cp $< $@
		chmod a+r $@
$(DEST)/%.png:	%.png
		cp $< $@
		chmod a+r $@

